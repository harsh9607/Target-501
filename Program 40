/******************************************************************************
CELEBRITY PROBLEM
*******************************************************************************/

#include <iostream>
#include<stack> 
using namespace std;

int main()
{
    
// Celebrity matrix
  int A[4][4] = {
               { 0,0,0,0},
                {1,0,1,0},
                {1,1,0,1},
                {1,0,0,0}      
              };
              
   
    
    stack<int> s1; 
    // O(n)
    s1.push(0);
    s1.push(1);
    s1.push(2);
    s1.push(3);
    
    while(!s1.empty())
    {
         int flag1 = 0 , flag2 = 0 ;
         
        int i = s1.top();
        s1.pop();
        int j = s1.top();
        s1.pop();
        
        if(A[i][j] == 1)
        {
            flag1 = -1;
        }
        if(A[j][i] == 1)
        {
            flag2 = -1;
        }
        
        if(flag1 == 0 && flag2 ==-1 )
        {
            s1.push(i); 
        }
        
         if(flag2 == 0 && flag1==-1)
        {
            s1.push(j); 
        }
    }

    if(s1.empty())
    {
        cout<<" NO CELEBRITY "; 
    }
    
    else
    {
        cout<<" CELEBRITY IS = "<<s1.top();
        
    }
    
    return 0;
}
