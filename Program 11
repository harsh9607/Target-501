// pattern 1 , 2 , 3 ,4 
#include<iostream>
#include <cmath>
using namespace std; 
int main()
{
    
    int n = 5 ; 
    
    cout<<"PATTERN 1 \n"; 
    for(int i=0 ; i< n ; i++ )
    {
    
        for(int j =0 ; j<n ; j++)
        {
            if(j<=i)
            {
                cout<<"*";
            }
        }
        cout<<endl; 
    }
    
    
    cout<<"PATTERN 2 \n"; 
    
      for(int i=n ; i>0 ; i-- )
    {
    
        for(int j =1 ; j<=n ; j++)
        {
            if(j<=i)
            {
                cout<<"*";
            }
        }
        cout<<endl; 
    }

    cout<<"PATTERN 3\n" ;
    
     
      for(int i=n ; i>0 ; i-- )
        {
    
        for(int j =1 ; j<=n ; j++)
        {
            if(j>=i)
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }
        cout<<endl; 
     }

    cout<<"PATTERN 4\n" ;
    
    for(int i=n ; i>0 ; i-- )
        {
    
        for(int j =1 ; j<=n ; j++)
        {
            if(i+j>n)
            {
                cout<<"*";
            }
            else
            {
                cout<<" ";
            }
        }
        cout<<endl; 
     }

    return 0;
}
