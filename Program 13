
#include <iostream>

using namespace std;

int main()
{
   char A[] = "HARSH\0"; 
   
   for(int i=0 ; i<5 ; i++)
   {   
          
       for(int j=0 ; j<=i ;  j++)
       {
            cout<<A[j]<<" ";  
       }
       cout<<endl;
   }
   
   cout<<"Pattern 2 : "<<endl; 
   int k = 1; 
   for(int i=1 ; i<=5 ; i++)
   {   
          
       for(int j=1 ; j<=i ;  j++)
       {
            cout<<k<<" "; 
            k++;
       }
       cout<<endl;
   }

    return 0;
}
